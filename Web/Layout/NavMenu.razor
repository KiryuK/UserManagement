@inject HttpClient Http
@inject NavigationManager Nav
@inject Web.Services.AppState AppState
@using Application
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">User Manager</a>
    </div>
</div>

<div class="p-2">
    <input @oninput="OnInput" class="form-control" placeholder="Search users..." />

    @if (searchResults.Any())
    {
        <ul class="list-group position-absolute" style="z-index: 1000; width: 90%;">
            @foreach (var user in searchResults)
            {
                <li class="list-group-item list-group-item-action"
                    @onclick="() => SelectUser(user)"
                    style="cursor:pointer">
                    @user.Name
                </li>
            }
        </ul>
    }
</div>

<div class="@NavMenuCssClass">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @foreach (var user in AppState.OpenUsers)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex justify-content-between align-items-center"
                         href="@($"user/{user.Id}/{GetFriendlyUrl(user)}")">

                    <span class="text-truncate">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @user.Name
                    </span>

                    <span class="bi bi-x text-white p-1"
                          style="cursor: pointer; font-size: 1.2rem; line-height: 0.8;"
                          title="Close"
                          @onclick:preventDefault
                          @onclick:stopPropagation
                          @onclick="() => CloseUser(user)">
                        &times;
                    </span>
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private List<User> searchResults = new();

    protected override async Task OnInitializedAsync()
    {
        AppState.OnChange += StateHasChanged;
        await AppState.InitializeAsync();
    }

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    private async Task OnInput(ChangeEventArgs e)
    {
        var term = e.Value?.ToString();
        if (!string.IsNullOrWhiteSpace(term))
        {
            try
            {
                searchResults = await Http.GetFromJsonAsync<List<User>>($"api/user?term={term}") ?? new();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"API Error: {ex.Message}");
                searchResults.Clear();
            }
        }
        else
        {
            searchResults.Clear();
        }
    }

    private async Task SelectUser(User user)
    {
        await AppState.AddUser(user);
        searchResults.Clear();
        Nav.NavigateTo($"user/{user.Id}/{GetFriendlyUrl(user)}");
    }

    private async Task CloseUser(User user)
    {
        await AppState.RemoveUser(user);
    }

    // Hilfsmethode für saubere URLs (z.B. entfernt Punkte bei "Dr.")
    private string GetFriendlyUrl(User user)
    {
        var cleanName = user.Name.Replace(".", "").Replace(" ", "-");
        return Uri.EscapeDataString(cleanName);
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}